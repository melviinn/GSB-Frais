<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Connexion{% endblock %}</title>
        <link rel="icon" href="{{ asset('Logo-gsb.png') }}">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('fontawesome/css/all.min.css') }}" type="text/css">
            <link href="{{ asset('css/loginComptable.css') }}" type="text/css" rel="stylesheet">
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <div class="box">
                {% if error %}
                    <div class="error-msg"><i class="fas fa-warning"></i>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <form method="post">
                    <div class="login-box">
                        <div class="form-login">
                            <h2 class="h3 mb-3 font-weight-normal">Connectez vous en tant que Comptable</h2>
                            <div class="input-box">
                                <input type="text" name="login" id="inputLogin" class="form-control" required>
                                <span>Login</span>
                                <i></i>
                            </div>
                            <div class="input-box">
                                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                                <span>Mot de passe</span>
                                <i></i>
                            </div>
                            <div class="links">
                                <a href="{{ path('app_visiteur') }}">Vous Ãªtes Visiteur ?</a>
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <button class="btn btn-lg btn-primary" type="submit">Connexion</button>
                        </div>
                    </div>
                </form>
            </box>
        {% endblock %}
    </body>
</html>
