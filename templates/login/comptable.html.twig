{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('css/login.css') }}" type="text/css" rel="stylesheet">
{% endblock %}

{% block body %}

<div class="box">
    <form method="post">
        <div class="login-box">
            <div class="form-login">
                <h2 class="h3 mb-3 font-weight-normal">Connectez vous en tant que Comptable</h2>
                <div class="input-box">
                    <input type="text" name="login" id="inputLogin" class="form-control" required>
                    <span>Login</span>
                    <i></i>
                </div>
                <div class="input-box">
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    <span>Mot de passe</span>
                    <i></i>
                </div>
                <div class="links">
                    <a href="{{ path('app_accueil') }}">Vous Ãªtes Visiteur ?</a>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn btn-lg btn-primary" type="submit">Connexion</button>
            </div>
        </div>
    </form>
</box>
{% endblock %}
